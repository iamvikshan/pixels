---
export const prerender = true
import '../styles/global.css'
import Layout from '../layouts/Layout.astro'
import { getCollection } from 'astro:content'

import AppHeader from '../components/Header.astro'
import AppFooter from '../components/Footer.astro'

const allPosts = await getCollection('blog')
// Sort by pubDate, newest first
const sortedPosts = allPosts.sort((a, b) => b.data.pubDate.getTime() - a.data.pubDate.getTime())
---

<Layout
  title='Photography Blog | Vikshan Pixels'
  description='Expert photography tips, behind-the-scenes stories, and equipment guides from professional photographer Vikshan. Learn about golden hour photography, wedding gear, and more.'
>
  <AppHeader />

  <section class='py-40'>
    <div class='mx-auto max-w-3xl'>
      <div class='mb-15 text-center'>
        <h1 class='title text-5xl font-black'>Blog articles</h1>
      </div>
      <div class='p-3'>
        {
          sortedPosts.map(post => (
            <a
              href={`/blog/${post.slug}`}
              class='mb-5 flex items-center gap-3 border-2 bg-white p-5 transition-all duration-200 hover:shadow-[4px_4px_0px_rgba(0,0,0,0.3)]'
            >
              <div>
                <div class='h-[130px] w-[200px] overflow-hidden border-2'>
                  <img
                    src={post.data.image.url}
                    alt={post.data.image.alt}
                    class='h-full w-full object-cover'
                  />
                </div>
              </div>
              <div class='flex flex-col gap-2'>
                <h1 class='line-clamp-2 text-xl font-bold'>{post.data.title}</h1>
                <div class='line-clamp-2'>{post.body?.substring(0, 200)}...</div>
              </div>
            </a>
          ))
        }
      </div>
    </div>
  </section>

  <AppFooter />
</Layout>
