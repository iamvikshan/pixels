---
const { text, link, target } = Astro.props

import svgHl from '../assets/hl.svg'
---

<div class='group relative'>
  <a
    href={link}
    target={target}
    class='text-md flex h-12 items-center rounded-full border-3 bg-[var(--blue)] px-6 font-medium text-black'
    >{text}</a
  >
  <img
    src={svgHl.src}
    width='30'
    class='absolute -right-7 -bottom-3 transition-all duration-200 group-hover:-bottom-4'
  />
</div>
