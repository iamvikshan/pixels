---
const mytools = [
  'Canon',
  'Sony',
  'Nikon',
  'Lightroom',
  'Photoshop',
  'Filmora',
  'Affinity Photo 2',
  'Affinity Designer 2',
  'Color Grading'
]
---

<script>
  import { gsap } from 'gsap'

  document.addEventListener('DOMContentLoaded', function () {
    const clonedContainer = document.querySelector('#cloned') as any

    Array.from(clonedContainer.children).forEach((img: any) => {
      const clone = img.cloneNode(true)
      clonedContainer.appendChild(clone)
    })

    const tl = gsap.timeline({ repeat: -1 })
    tl.to(clonedContainer, {
      x: -(clonedContainer.scrollWidth / 2),
      duration: 30,
      ease: 'none'
    })
  })
</script>

<section class='relative z-5 bg-black py-6'>
  <div class='overflow-hidden'>
    <div class='flex items-center gap-10 md:gap-30' id='cloned'>
      {
        mytools.map(item => (
          <div class='flex-1 text-2xl whitespace-nowrap text-white'> {item} </div>
        ))
      }
    </div>
  </div>
</section>
