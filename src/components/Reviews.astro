const testimonials = [
  {
    comment: `"Vikshan captured our wedding day perfectly! Every moment was beautifully documented. The photos are absolutely stunning and we'll cherish them forever."`,
    author: {
      name: `Priya & Rahul`,
      pos: `Wedding Clients`,
      pic: `https://images.pexels.com/photos/2709386/pexels-photo-2709386.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=2`
    },
    cls: `rotate-2 -translate-y-10`
  },
  {
    comment: `"Professional, creative, and incredible attention to detail. The corporate event coverage exceeded our expectations. Highly recommend!"`,
    author: {
      name: `Sarah Johnson`,
      pos: `Event Coordinator, Tech Corp`,
      pic: `https://images.pexels.com/photos/2128819/pexels-photo-2128819.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=2`
    },
    cls: `-rotate-2 -translate-x-10  z-5`
  },
  {
    comment: `"The cinematic video of our product launch was outstanding. Vikshan's editing skills brought our vision to life in ways we couldn't imagine."`,
    author: {
      name: `Michael Chen`,
      pos: `Marketing Director, StartupX`,
      pic: `https://images.pexels.com/photos/2169429/pexels-photo-2169429.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=2`
    },
    cls: `rotate-2 translate-x-5 z-5`
  },
  {
    comment: `"Amazing portrait session! Vikshan made us feel comfortable and the results were stunning. Every pixel truly perfected!"`,
    author: {
      name: `The Sharma Family`,
      pos: `Portrait Session Clients`,
      pic: `https://images.pexels.com/photos/3586798/pexels-photo-3586798.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=2`
    },
    cls: `-rotate-2 translate-y-10 md:translate-y-15`
  }
]
---

<section>
  <div class='mx-auto max-w-4xl overflow-hidden px-10 pb-20'>
    <div class='grid grid-cols-1 md:grid-cols-2'>
      <div class='relative flex'>
        <h1 class='text-3xl'>Hereâ€™s what my clients are saying about my work</h1>
        <img
          src={svgNew.src}
          alt='arrow'
          width='40'
          class='absolute -right-3 bottom-0 md:-right-10'
        />
      </div>
    </div>

    <div class='grid grid-cols-1 py-30 md:grid-cols-2'>
      {
        testimonials.map(item => (
          <div
            class={`flex flex-col gap-3 border-2 bg-white p-5 pr-15 shadow-[6px_6px_0px_rgba(0,0,0,0.3)] ${item.cls}`}
          >
            <p>{item.comment}</p>
            <div class='flex items-center gap-2'>
              <div>
                <div class='size-11 overflow-hidden rounded-full border'>
                  <img src={item.author.pic} alt='' class='h-full w-full object-cover' />
                </div>
              </div>
              <div>
                <h3 class='font-medium'>{item.author.name}</h3>
                <p>{item.author.pos}</p>
              </div>
            </div>
          </div>
        ))
      }
    </div>
  </div>
</section>
